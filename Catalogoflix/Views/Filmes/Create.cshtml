@model Catalogoflix.Models.Filme
@{
    ViewData["Title"] = "Cadastrar Filme";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <!-- 1/3 da tela-->
        <form asp-action="Create">
            
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estilo" class="control-label"></label>
                <input asp-for="Estilo" class="form-control" />
                <span asp-validation-for="Estilo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resumo" class="control-label"></label>
                <input asp-for="Resumo" class="form-control" />
                <span asp-validation-for="Resumo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataLancamento" class="control-label"></label>
                <input asp-for="DataLancamento" class="form-control" />
                <span asp-validation-for="DataLancamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescricaoCompleta" class="control-label"></label>
                <textarea asp-for="DescricaoCompleta" class="form-control" rows="3"></textarea>
                <span asp-validation-for="DescricaoCompleta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-default btn-danger" />
            </div>
        </form>
    </div>
</div>

@section Scripts {      
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} 
}
